{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": ["./app/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/ui/*": ["./app/ui/*"],
      "@/public/*": ["./public"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/ui/songList/album/albumTable.jsx",
    "app/ui/songList/album/albumControls.jsx",
    "app/ui/songList/albumModule.jsx",
    "app/ui/songList/songRow.tsx"
  ],
  "exclude": ["node_modules"]
}
